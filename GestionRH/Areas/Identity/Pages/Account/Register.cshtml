@page
@model RegisterModel
@{
    ViewData["Title"] = "Inscription";
}

<div class="auth-page-wrapper fade-in">
    <div class="auth-card">
        <div class="text-center mb-4">
            <div class="auth-logo-circle">
                <i class="bi bi-person-plus-fill"></i>
            </div>
            <h2 class="fw-bold mb-1">Créer un compte</h2>
            <p class="text-muted small">Commencez à gérer vos RH simplement.</p>
        </div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small" role="alert"></div>
            
            <div class="row g-2 mb-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Nom" class="form-control" placeholder="Nom" />
                        <label asp-for="Input.Nom">Nom</label>
                        <span asp-validation-for="Input.Nom" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Input.Prenom" class="form-control" placeholder="Prénom" />
                        <label asp-for="Input.Prenom">Prénom</label>
                        <span asp-validation-for="Input.Prenom" class="text-danger small"></span>
                    </div>
                </div>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Adresse Email</label>
                <span asp-validation-for="Input.Email" class="text-danger small"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Mot de passe</label>
                <span asp-validation-for="Input.Password" class="text-danger small"></span>
            </div>
            
            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirmer le mot de passe</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>
            
            <button id="registerSubmit" type="submit" class="btn btn-auth-primary w-100 py-3 shadow-none">
                S'inscrire gratuitement
            </button>
            
            <div class="text-center mt-4 pt-3 border-top">
                <p class="text-muted small mb-2">Vous avez déjà un compte ?</p>
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary fw-bold text-decoration-none small">Se connecter</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
