@using Microsoft.AspNetCore.Identity
@using GestionRH.Models
@inject UserManager<Utilisateur> UserManager

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionRH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionRH.styles.css" asp-append-version="true" />
</head>
<body>
    @{
        var user = await UserManager.GetUserAsync(User);
        var userRole = user?.Role;
        var isAuthenticated = User.Identity?.IsAuthenticated == true;
    }

    @if (isAuthenticated)
    {
        <div class="app-wrapper">
            <!-- Sidebar -->
            <nav id="sidebar" class="sidebar">
                <div class="sidebar-header">
                    <a class="brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-diagram-3-fill text-primary animated-logo-icon"></i>
                        <span class="animated-logo-text">GestionRH</span>
                    </a>
                </div>
                <div class="sidebar-content">
                    <div class="nav-label">Menu Principal</div>
                    
                    <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" 
                       asp-controller="Home" asp-action="Index">
                        <i class="bi bi-grid-1x2-fill"></i>
                        <span>Tableau de bord</span>
                    </a>

                    <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Conges" ? "active" : "")" 
                       asp-controller="Conges" asp-action="Index">
                        <i class="bi bi-calendar-check-fill"></i>
                        <span>Congés</span>
                    </a>

                    <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Pointages" ? "active" : "")" 
                       asp-controller="Pointages" asp-action="Index">
                        <i class="bi bi-clock-fill"></i>
                        @if (userRole == "AdministrateurRH" || userRole == "Responsable") { <span>Pointages</span> } else { <span>Mes Pointages</span> }
                    </a>
                    
                    <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Paies" ? "active" : "")" 
                       asp-controller="Paies" asp-action="Index">
                        <i class="bi bi-cash-stack"></i>
                        @if (userRole == "AdministrateurRH") { <span>Paies</span> } else { <span>Mes Paies</span> }
                    </a>

                    @if (userRole == "AdministrateurRH" || userRole == "Responsable")
                    {
                        <div class="nav-label">Gestion</div>
                        <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employes" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
                           asp-controller="Employes" asp-action="Index">
                            <i class="bi bi-briefcase-fill"></i>
                            <span>Employés</span>
                        </a>

                        @if (userRole == "AdministrateurRH")
                        {
                            <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Responsables" ? "active" : "")" 
                               asp-controller="Responsables" asp-action="Index">
                                <i class="bi bi-person-badge-fill"></i>
                                <span>Responsables</span>
                            </a>
                        }
                        
                        <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Departements" ? "active" : "")" 
                           asp-controller="Departements" asp-action="Index">
                            <i class="bi bi-building-fill"></i>
                            <span>Départements</span>
                        </a>
                    }

                    @if (userRole == "AdministrateurRH")
                    {
                        <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contrats" ? "active" : "")" 
                           asp-controller="Contrats" asp-action="Index">
                            <i class="bi bi-file-earmark-text-fill"></i>
                            <span>Contrats</span>
                        </a>
                    }

                    <div class="nav-label">Compte</div>
                    <a class="nav-link custom-nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Employes" && ViewContext.RouteData.Values["Action"]?.ToString() == "MonProfil" ? "active" : "")" 
                       asp-controller="Employes" asp-action="MonProfil">
                        <i class="bi bi-person-circle"></i>
                        <span>Mon Profil</span>
                    </a>
                </div>
            </nav>

            <!-- Main Content -->
            <div class="main-content">
                <!-- Topbar -->
                <div class="top-bar">
                    <div class="d-flex align-items-center">
                        <button id="sidebarToggle" class="toggle-sidebar">
                            <i class="bi bi-list"></i>
                        </button>
                        <h5 class="m-0 fw-bold">@ViewData["Title"]</h5>
                    </div>

                    <div class="d-flex align-items-center gap-3">
                        <!-- Dark Mode Toggle -->
                        <button id="themeToggle" class="btn-icon btn-icon-primary border-0 bg-transparent me-2" title="Changer de thème">
                            <i class="bi bi-moon-fill fs-5"></i>
                        </button>

                        <a class="nav-link text-dark position-relative p-2" asp-controller="Notifications" asp-action="Index">
                            <i class="bi bi-bell fs-5"></i>
                            <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">0</span>
                        </a>
                        
                        <div class="dropdown">
                            <div class="user-profile" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="text-end d-none d-sm-block me-2">
                                    <span class="user-name">@user?.NomComplet</span>
                                    <span class="user-role">@user?.Role</span>
                                </div>
                                <div class="avatar">
                                    @(user?.NomComplet?.Substring(0, 1).ToUpper() ?? "U")
                                </div>
                                <i class="bi bi-chevron-down text-muted small ms-1"></i>
                            </div>
                            <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg">
                                <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index"><i class="bi bi-gear me-2"></i>Paramètres</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="dropdown-item text-danger"><i class="bi bi-box-arrow-right me-2"></i>Déconnexion</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Page Content -->
                <div class="content-body">
                    @RenderBody()
                </div>


            </div>
        </div>
    }
    else
    {
        <!-- Layout for non-authenticated users (Login/Register) -->
        <div class="login-bg-wrapper">
             <div class="container d-flex justify-content-center">
                <main role="main" class="w-100">
                    @RenderBody()
                </main>
             </div>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Sidebar Toggle Script
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.getElementById('sidebarToggle');
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');
            
            if (sidebarToggle) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    // Optional: Toggle overlay for mobile if needed
                });
            }

            // --- Dark Mode Logic ---
            const themeToggle = document.getElementById('themeToggle');
            const htmlElement = document.documentElement;
            const icon = themeToggle ? themeToggle.querySelector('i') : null;

            if (themeToggle && icon) {
                // Initialize based on localStorage
                const currentTheme = localStorage.getItem('theme');
                if (currentTheme === 'dark') {
                    htmlElement.setAttribute('data-theme', 'dark');
                    icon.classList.remove('bi-moon-fill');
                    icon.classList.add('bi-sun-fill');
                }

                // Toggle Event
                themeToggle.addEventListener('click', () => {
                    const isDark = htmlElement.getAttribute('data-theme') === 'dark';
                    if (isDark) {
                        htmlElement.removeAttribute('data-theme');
                        localStorage.setItem('theme', 'light');
                        icon.classList.remove('bi-sun-fill');
                        icon.classList.add('bi-moon-fill');
                    } else {
                        htmlElement.setAttribute('data-theme', 'dark');
                        localStorage.setItem('theme', 'dark');
                        icon.classList.remove('bi-moon-fill');
                        icon.classList.add('bi-sun-fill');
                    }
                });
            }
        });
    </script>

    @if (isAuthenticated)
    {
        <script>
            // Connexion SignalR pour les notifications
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .build();

            connection.start().then(function () {
                var userId = '@(UserManager.GetUserId(User))';
                if (userId) {
                    connection.invoke("JoinGroup", userId);
                }
            }).catch(console.error);

            connection.on("ReceiveNotification", function (notification) {
                updateNotificationCount();
                showToastNotification(notification);
            });

            function updateNotificationCount() {
                fetch('@Url.Action("GetUnreadCount", "Notifications")')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('notificationCount');
                        if (badge) {
                            if (data.count > 0) {
                                badge.textContent = data.count;
                                badge.style.display = 'block';
                            } else {
                                badge.style.display = 'none';
                            }
                        }
                    });
            }

            function showToastNotification(notification) {
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-primary border-0';
                toast.setAttribute('role', 'alert');
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>${notification.titre}</strong><br>
                            ${notification.message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                
                const toastContainer = document.getElementById('toastContainer') || createToastContainer();
                toastContainer.appendChild(toast);
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                if (notification.lienAction) {
                    toast.addEventListener('click', () => window.location.href = notification.lienAction);
                }
            }

            function createToastContainer() {
                const container = document.createElement('div');
                container.id = 'toastContainer';
                container.className = 'toast-container position-fixed top-0 end-0 p-3';
                container.style.zIndex = '9999';
                document.body.appendChild(container);
                return container;
            }

            document.addEventListener('DOMContentLoaded', function() {
                updateNotificationCount();
                setInterval(updateNotificationCount, 30000);
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
