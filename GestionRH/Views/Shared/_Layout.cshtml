@using Microsoft.AspNetCore.Identity
@using GestionRH.Models
@inject UserManager<Utilisateur> UserManager

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionRH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionRH.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    GestionRH
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                Accueil
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var userRole = currentUser?.Role;
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Conges" asp-action="Index">
                                    Congés
                                </a>
                            </li>
                            @if (userRole == "AdministrateurRH" || userRole == "Responsable")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Employes" asp-action="Index">
                                        Employés
                                    </a>
                                </li>
                            }
                            @if (userRole == "AdministrateurRH")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Responsables" asp-action="Index">
                                        Responsables
                                    </a>
                                </li>
                            }
                            @if (userRole == "AdministrateurRH" || userRole == "Responsable")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Departements" asp-action="Index">
                                        Départements
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Paies" asp-action="Index">
                                    @if (userRole == "AdministrateurRH")
                                    {
                                        <text>Paies</text>
                                    }
                                    else
                                    {
                                        <text>Mes Paies</text>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pointages" asp-action="Index">
                                    @if (userRole == "AdministrateurRH")
                                    {
                                        <text>Pointages</text>
                                    }
                                    else if (userRole == "Responsable")
                                    {
                                        <text>Pointages</text>
                                    }
                                    else
                                    {
                                        <text>Mes Pointages</text>
                                    }
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Employes" asp-action="MonProfil">Mon Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark position-relative" asp-controller="Notifications" asp-action="Index">
                                    <i class="bi bi-bell"></i>
                                    <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="display: none;">0</span>
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GestionRH - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@microsoft/signalr@8.0.0/dist/browser/signalr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script>
            // Connexion SignalR pour les notifications
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/notificationHub")
                .build();

            connection.start().then(function () {
                // Rejoindre le groupe de l'utilisateur
                var userId = '@(UserManager.GetUserId(User))';
                if (userId) {
                    connection.invoke("JoinGroup", userId);
                }
            }).catch(function (err) {
                console.error("Erreur de connexion SignalR:", err);
            });

            // Écouter les nouvelles notifications
            connection.on("ReceiveNotification", function (notification) {
                // Mettre à jour le badge
                updateNotificationCount();
                
                // Afficher une notification toast (optionnel)
                showToastNotification(notification);
            });

            // Fonction pour mettre à jour le compteur
            function updateNotificationCount() {
                fetch('@Url.Action("GetUnreadCount", "Notifications")')
                    .then(response => response.json())
                    .then(data => {
                        const badge = document.getElementById('notificationCount');
                        if (data.count > 0) {
                            badge.textContent = data.count;
                            badge.style.display = 'block';
                        } else {
                            badge.style.display = 'none';
                        }
                    });
            }

            // Fonction pour afficher une notification toast
            function showToastNotification(notification) {
                // Créer un toast Bootstrap
                const toast = document.createElement('div');
                toast.className = 'toast align-items-center text-white bg-primary border-0';
                toast.setAttribute('role', 'alert');
                toast.innerHTML = `
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>${notification.titre}</strong><br>
                            ${notification.message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                `;
                
                const toastContainer = document.getElementById('toastContainer') || createToastContainer();
                toastContainer.appendChild(toast);
                
                const bsToast = new bootstrap.Toast(toast);
                bsToast.show();
                
                // Rediriger si un lien est fourni
                if (notification.lienAction) {
                    toast.addEventListener('click', function() {
                        window.location.href = notification.lienAction;
                    });
                }
            }

            function createToastContainer() {
                const container = document.createElement('div');
                container.id = 'toastContainer';
                container.className = 'toast-container position-fixed top-0 end-0 p-3';
                container.style.zIndex = '9999';
                document.body.appendChild(container);
                return container;
            }

            // Charger le compteur au chargement de la page
            document.addEventListener('DOMContentLoaded', function() {
                updateNotificationCount();
                // Actualiser toutes les 30 secondes
                setInterval(updateNotificationCount, 30000);
            });
        </script>
    }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
