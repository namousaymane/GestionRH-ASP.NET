@model IEnumerable<GestionRH.Models.Paie>
@using Microsoft.AspNetCore.Identity
@using GestionRH.Models
@inject UserManager<Utilisateur> UserManager

@{
    ViewData["Title"] = "Gestion des Paies";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRole = currentUser?.Role;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-cash-stack"></i> @ViewData["Title"]</h1>
        @if (userRole == "AdministrateurRH")
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Nouvelle Paie
            </a>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Employé</th>
                        <th>Mois</th>
                        <th>Montant</th>
                        <th>Date d'émission</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-4 text-muted">Aucune paie trouvée.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    @if (item.Employe != null)
                                    {
                                        @item.Employe.NomComplet
                                    }
                                    else
                                    {
                                        <span class="text-danger">Inconnu</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.Mois</span>
                                </td>
                                <td class="fw-bold text-success">@item.Montant.ToString("C")</td>
                                <td>@item.DateEmission.ToShortDateString()</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdPaie" class="btn btn-sm btn-info text-white" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        
                                        @if (userRole == "AdministrateurRH")
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.IdPaie" class="btn btn-sm btn-warning" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.IdPaie" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

