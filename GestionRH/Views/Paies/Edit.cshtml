@model GestionRH.Models.Paie

@{
    ViewData["Title"] = "Modifier la paie";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modifier la paie</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IdPaie" />

                        <div class="form-group mb-3">
                            <label asp-for="EmployeId" class="control-label fw-bold">Employé</label>
                            @if (ViewBag.Employes == null || ((Microsoft.AspNetCore.Mvc.Rendering.SelectList)ViewBag.Employes).Count() == 0)
                            {
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Aucun employé disponible.
                                </div>
                                <select asp-for="EmployeId" class="form-select" disabled>
                                    <option value="@Model.EmployeId">@Model.Employe?.NomComplet</option>
                                </select>
                            }
                            else
                            {
                                <select asp-for="EmployeId" class="form-select" asp-items="ViewBag.Employes">
                                    <option value="">-- Sélectionner un employé --</option>
                                </select>
                            }
                            <span asp-validation-for="EmployeId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Mois" class="control-label fw-bold">Mois</label>
                            <input asp-for="Mois" class="form-control" placeholder="Ex: Janvier 2024" />
                            <span asp-validation-for="Mois" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Montant" class="control-label fw-bold">Montant</label>
                            <input asp-for="Montant" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Montant" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateEmission" class="control-label fw-bold">Date d'émission</label>
                            <input asp-for="DateEmission" class="form-control" type="date" />
                            <span asp-validation-for="DateEmission" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">Enregistrer les modifications</button>
                            <a asp-action="Details" asp-route-id="@Model.IdPaie" class="btn btn-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

