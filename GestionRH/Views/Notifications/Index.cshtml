@model IEnumerable<GestionRH.Models.Notification>

@{
    ViewData["Title"] = "Mes Notifications";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-bell"></i> Mes Notifications</h1>
        @if (Model.Any(n => !n.EstLue))
        {
            <button id="markAllRead" class="btn btn-outline-primary">
                <i class="bi bi-check-all"></i> Tout marquer comme lu
            </button>
        }
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash display-1 text-muted"></i>
                    <p class="text-muted mt-3">Aucune notification</p>
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item @(notification.EstLue ? "" : "bg-light")" data-notification-id="@notification.Id">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-2">
                                        <h6 class="mb-0 me-2 @(notification.EstLue ? "" : "fw-bold")">
                                            @notification.Titre
                                        </h6>
                                        @if (!notification.EstLue)
                                        {
                                            <span class="badge bg-primary">Nouveau</span>
                                        }
                                    </div>
                                    <p class="mb-1 text-muted">@notification.Message</p>
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @notification.DateCreation.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                    @if (!string.IsNullOrEmpty(notification.LienAction))
                                    {
                                        <div class="mt-2">
                                            <a href="@notification.LienAction" class="btn btn-sm btn-outline-primary">
                                                Voir les d√©tails
                                            </a>
                                        </div>
                                    }
                                </div>
                                @if (!notification.EstLue)
                                {
                                    <button class="btn btn-sm btn-outline-secondary mark-read" data-id="@notification.Id">
                                        <i class="bi bi-check"></i>
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Marquer une notification comme lue
            $('.mark-read').click(function() {
                var id = $(this).data('id');
                var item = $(this).closest('.list-group-item');
                
                $.post('@Url.Action("MarkAsRead", "Notifications")', { id: id }, function() {
                    item.removeClass('bg-light');
                    item.find('.fw-bold').removeClass('fw-bold');
                    item.find('.badge').remove();
                    item.find('.mark-read').remove();
                    updateNotificationCount();
                });
            });

            // Marquer toutes comme lues
            $('#markAllRead').click(function() {
                $.post('@Url.Action("MarkAllAsRead", "Notifications")', function() {
                    location.reload();
                });
            });
        });

        function updateNotificationCount() {
            $.get('@Url.Action("GetUnreadCount", "Notifications")', function(data) {
                $('#notificationCount').text(data.count);
                if (data.count === 0) {
                    $('#notificationCount').hide();
                }
            });
        }
    </script>
}

