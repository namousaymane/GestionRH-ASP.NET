@model GestionRH.Models.Utilisateur

@{
    ViewData["Title"] = "Mon Profil";
    var employe = Model as GestionRH.Models.Employe;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <div class="mb-3">
                        @if (string.IsNullOrEmpty(Model.Prenom))
                        {
                            <span class="rounded-circle bg-white text-primary d-inline-flex align-items-center justify-content-center fw-bold fs-2" style="width: 80px; height: 80px;">?</span>
                        }
                        else
                        {
                            <span class="rounded-circle bg-white text-primary d-inline-flex align-items-center justify-content-center fw-bold fs-2" style="width: 80px; height: 80px;">
                                @Model.Prenom.Substring(0, 1).ToUpper()@Model.Nom.Substring(0, 1).ToUpper()
                            </span>
                        }
                    </div>
                    <h2 class="mb-0">@Model.NomComplet</h2>
                    @if (employe != null && !string.IsNullOrEmpty(employe.Poste))
                    {
                        <p class="mb-0 opacity-75">@employe.Poste</p>
                    }
                    else
                    {
                        <p class="mb-0 opacity-75">@Model.Role</p>
                    }
                </div>

                <div class="card-body p-5">
                    <h5 class="text-primary mb-4"><i class="bi bi-person-lines-fill me-2"></i>Informations Personnelles</h5>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Email :</div>
                        <div class="col-sm-8">@Model.Email</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Téléphone :</div>
                        <div class="col-sm-8">@(Model.PhoneNumber ?? "Non renseigné")</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted fw-bold">Rôle :</div>
                        <div class="col-sm-8">
                            <span class="badge bg-primary">@Model.Role</span>
                        </div>
                    </div>

                    @if (employe != null)
                    {
                        <hr class="my-4">

                        <h5 class="text-primary mb-4"><i class="bi bi-briefcase-fill me-2"></i>Informations Professionnelles</h5>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold">Département :</div>
                            <div class="col-sm-8">
                                @if (employe.Departement != null)
                                {
                                    <span class="badge bg-info text-dark">@employe.Departement.Nom</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Non assigné</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold">Solde de congés :</div>
                            <div class="col-sm-8">
                                <span class="badge bg-success fs-6">@employe.SoldeConges jours</span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-4 text-muted fw-bold">Salaire de base :</div>
                            <div class="col-sm-8 fw-bold">@employe.Salaire.ToString("C")</div>
                        </div>
                    }

                    <hr class="my-4">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key me-2"></i>Changer mot de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>