@model GestionRH.Models.Utilisateur

@{
    ViewData["Title"] = "Mon Profil";
    var employe = Model as GestionRH.Models.Employe;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 fade-in overflow-hidden">
                <div class="card-header-premium text-center py-5">
                    <div class="mb-3 position-relative d-inline-block">
                        @if (string.IsNullOrEmpty(Model.Prenom))
                        {
                            <span class="rounded-circle bg-white text-primary d-inline-flex align-items-center justify-content-center fw-bold fs-1 shadow-sm" style="width: 100px; height: 100px;">?</span>
                        }
                        else
                        {
                            <span class="rounded-circle bg-white text-primary d-inline-flex align-items-center justify-content-center fw-bold fs-1 shadow-sm" style="width: 100px; height: 100px;">
                                @Model.Prenom.Substring(0, 1).ToUpper()@Model.Nom.Substring(0, 1).ToUpper()
                            </span>
                        }
                    </div>
                    <h2 class="mb-1 fw-bold text-white">@Model.NomComplet</h2>
                    @if (employe != null && !string.IsNullOrEmpty(employe.Poste))
                    {
                        <p class="mb-0 text-white-50 fs-5">@employe.Poste</p>
                    }
                    else
                    {
                        <p class="mb-0 text-white-50 fs-5">@Model.Role</p>
                    }
                </div>

                <div class="card-body p-5">
                    <h5 class="text-primary mb-4 fw-bold"><i class="bi bi-person-lines-fill me-2"></i>Informations Personnelles</h5>

                    <div class="row mb-3 align-items-center">
                        <div class="col-sm-4 text-muted fw-bold">Email</div>
                        <div class="col-sm-8 text-dark">@Model.Email</div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <div class="col-sm-4 text-muted fw-bold">Téléphone</div>
                        <div class="col-sm-8 text-dark">@(Model.PhoneNumber ?? "Non renseigné")</div>
                    </div>

                    <div class="row mb-3 align-items-center">
                        <div class="col-sm-4 text-muted fw-bold">Rôle</div>
                        <div class="col-sm-8">
                            <span class="badge bg-primary px-3 py-2 rounded-pill">@Model.Role</span>
                        </div>
                    </div>

                    @if (employe != null)
                    {
                        <hr class="my-5 opacity-10">

                        <h5 class="text-primary mb-4 fw-bold"><i class="bi bi-briefcase-fill me-2"></i>Informations Professionnelles</h5>

                        <div class="row mb-3 align-items-center">
                            <div class="col-sm-4 text-muted fw-bold">Département</div>
                            <div class="col-sm-8">
                                @if (employe.Departement != null)
                                {
                                    <span class="badge bg-info text-dark px-3 py-2 rounded-pill">
                                        <i class="bi bi-building-fill me-1"></i> @employe.Departement.Nom
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Non assigné</span>
                                }
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-sm-4 text-muted fw-bold">Solde de congés</div>
                            <div class="col-sm-8">
                                <span class="badge bg-success fs-6 px-3 py-2 rounded-pill">
                                    <i class="bi bi-calendar-check-fill me-1"></i> @employe.SoldeConges jours
                                </span>
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <div class="col-sm-4 text-muted fw-bold">Salaire de base</div>
                            <div class="col-sm-8 fw-bold fs-5 text-dark">@employe.Salaire.ToString("C")</div>
                        </div>
                    }

                    <hr class="my-5 opacity-10">

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-outline-secondary px-4 py-2 rounded-pill">
                            <i class="bi bi-key-fill me-2"></i>Changer mot de passe
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>