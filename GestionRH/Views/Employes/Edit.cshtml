@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Modifier un employé";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-warning bg-gradient text-dark p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-50 rounded-circle p-3 me-3">
                            <i class="bi bi-pencil-fill fs-3 text-dark"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-1 fw-bold">Modifier l'Employé</h2>
                            <p class="mb-0 text-dark-50 small">Mise à jour des informations de @Model.NomComplet</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5 bg-light bg-opacity-10">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 border-0 shadow-sm" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <h5 class="text-warning text-dark-emphasis mb-3"><i class="bi bi-person-circle me-2"></i>Informations Personnelles</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <input asp-for="Nom" class="form-control border-0" placeholder="Nom" />
                                    <label asp-for="Nom">Nom</label>
                                </div>
                                <span asp-validation-for="Nom" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <input asp-for="Prenom" class="form-control border-0" placeholder="Prénom" />
                                    <label asp-for="Prenom">Prénom</label>
                                </div>
                                <span asp-validation-for="Prenom" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-12">
                                <div class="form-floating shadow-sm rounded-3">
                                    <input asp-for="Email" class="form-control border-0" placeholder="nom@exemple.com" />
                                    <label asp-for="Email">Adresse Email</label>
                                </div>
                                <span asp-validation-for="Email" class="text-danger small ms-1"></span>
                            </div>
                        </div>

                        <h5 class="text-warning text-dark-emphasis mb-3"><i class="bi bi-briefcase-fill me-2"></i>Poste & Contrat</h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <input asp-for="Poste" class="form-control border-0" placeholder="Poste" />
                                    <label asp-for="Poste">Intitulé du Poste</label>
                                </div>
                                <span asp-validation-for="Poste" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <input asp-for="Salaire" class="form-control border-0" placeholder="Salaire" />
                                    <label asp-for="Salaire">Salaire Mensuel (MAD)</label>
                                </div>
                                <span asp-validation-for="Salaire" class="text-danger small ms-1"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <select asp-for="ManagerId" class="form-select border-0" asp-items="ViewBag.Responsables">
                                        <option value="">-- Sélectionner un Manager --</option>
                                    </select>
                                    <label asp-for="ManagerId">Manager (Optionnel)</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating shadow-sm rounded-3">
                                    <select asp-for="DepartementId" class="form-select border-0" asp-items="ViewBag.Departements">
                                        <option value="">-- Sélectionner un Département --</option>
                                    </select>
                                    <label asp-for="DepartementId">Département (Optionnel)</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4 fw-bold">Annuler</a>
                            <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 shadow fw-bold">
                                <i class="bi bi-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
