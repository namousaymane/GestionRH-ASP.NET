@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Modifier l'employé";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modifier l'employé</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Nom" class="control-label fw-bold"></label>
                            <input asp-for="Nom" class="form-control" />
                            <span asp-validation-for="Nom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Prenom" class="control-label fw-bold"></label>
                            <input asp-for="Prenom" class="form-control" />
                            <span asp-validation-for="Prenom" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Poste" class="control-label fw-bold"></label>
                            <input asp-for="Poste" class="form-control" />
                            <span asp-validation-for="Poste" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Salaire" class="control-label fw-bold"></label>
                            <input asp-for="Salaire" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Salaire" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ManagerId" class="control-label fw-bold"></label>
                            <select asp-for="ManagerId" class="form-select">
                                <option value="">Aucun manager</option>
                                @foreach (var responsable in ViewBag.Responsables ?? new List<GestionRH.Models.Responsable>())
                                {
                                    <option value="@responsable.Id">@responsable.NomComplet</option>
                                }
                            </select>
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-warning btn-lg">Enregistrer les modifications</button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

