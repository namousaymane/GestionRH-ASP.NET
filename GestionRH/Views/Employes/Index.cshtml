@model IEnumerable<GestionRH.Models.Employe>

@{
    ViewData["Title"] = "Liste des Employés";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>👥 Liste des Employés</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouvel Employé
        </a>
    </div>

    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Nom Complet</th>
                <th>Email</th>
                <th>Poste</th>
                <th>Solde</th>
                <th>Salaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">Aucun employé trouvé.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NomComplet</td>
                        <td>@item.Email</td>
                        <td>@item.Poste</td>
                        <td>@item.SoldeConges j</td>
                        <td>@item.Salaire.ToString("C")</td>
                        <td>
                            <a href="#" class="btn btn-sm btn-info text-white">Détails</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>