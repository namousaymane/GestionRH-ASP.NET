@model GestionRH.Models.Departement

@{
    ViewData["Title"] = "Détails du Département";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-building"></i> @Model.Nom</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-primary"><i class="bi bi-info-circle"></i> Informations</h5>
                            <hr />
                            <div class="mb-3">
                                <strong>Nom du Département :</strong><br />
                                <span class="fs-5">@Model.Nom</span>
                            </div>
                            <div class="mb-3">
                                <strong>Responsable :</strong><br />
                                @if (Model.Chef != null)
                                {
                                    <span class="badge bg-info fs-6">@Model.Chef.NomComplet</span>
                                    <br />
                                    <small class="text-muted">@Model.Chef.Email</small>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Aucun responsable assigné</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-success"><i class="bi bi-people"></i> Employés (@Model.Employes.Count)</h5>
                            <hr />
                            @if (Model.Employes.Any())
                            {
                                <div class="list-group">
                                    @foreach (var employe in Model.Employes)
                                    {
                                        <div class="list-group-item">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <strong>@employe.NomComplet</strong><br />
                                                    <small class="text-muted">@employe.Poste</small>
                                                </div>
                                                <a asp-controller="Employes" asp-action="Details" asp-route-id="@employe.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> Voir
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Aucun employé dans ce département</p>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.DepartementId" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








