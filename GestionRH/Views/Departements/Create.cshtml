@model GestionRH.Models.Departement

@{
    ViewData["Title"] = "Créer un Département";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary bg-gradient text-white p-4">
                    <div class="d-flex align-items-center">
                        <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                            <i class="bi bi-building-add fs-3"></i>
                        </div>
                        <div>
                            <h2 class="h4 mb-1 fw-bold">Nouveau Département</h2>
                            <p class="mb-0 text-white-50 small">Créez un nouveau département pour organiser vos équipes.</p>
                        </div>
                    </div>
                </div>
                <div class="card-body p-4 p-md-5 bg-light bg-opacity-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4 rounded-3 border-0 shadow-sm" role="alert"></div>

                        <h5 class="text-primary mb-3"><i class="bi bi-info-square-fill me-2"></i>Informations Générales</h5>
                        
                        <div class="mb-4">
                            <div class="form-floating shadow-sm rounded-3">
                                <input asp-for="Nom" class="form-control border-0" placeholder="Nom du département" />
                                <label asp-for="Nom">Nom du Département</label>
                            </div>
                            <span asp-validation-for="Nom" class="text-danger small ms-1"></span>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating shadow-sm rounded-3">
                                <select asp-for="ChefId" class="form-select border-0" asp-items="ViewBag.Employes">
                                    <option value="">-- Sélectionner un Responsable (Optionnel) --</option>
                                </select>
                                <label asp-for="ChefId">Responsable (Chef)</label>
                            </div>
                            <div class="form-text mt-2"><i class="bi bi-person-check me-1"></i>Vous pourrez assigner ou changer le responsable ultérieurement.</div>
                        </div>

                        <div class="d-flex justify-content-end gap-3 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-light btn-lg rounded-pill px-4 fw-bold">Annuler</a>
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5 shadow fw-bold">
                                <i class="bi bi-plus-lg me-2"></i>Créer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
