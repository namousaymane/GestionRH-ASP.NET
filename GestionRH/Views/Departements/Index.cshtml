@model IEnumerable<GestionRH.Models.Departement>
@using Microsoft.AspNetCore.Identity
@using GestionRH.Models
@inject UserManager<Utilisateur> UserManager

@{
    ViewData["Title"] = "Gestion des Départements";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRole = currentUser?.Role;
    var isAdminRH = userRole == "AdministrateurRH";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="bi bi-building"></i> Gestion des Départements</h1>
        @if (isAdminRH)
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nouveau Département
            </a>
        }
    </div>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> Aucun département trouvé. Créez votre premier département.
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-building"></i> @item.Nom</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <strong><i class="bi bi-person-badge"></i> Responsable :</strong><br />
                                @if (item.Chef != null)
                                {
                                    <span class="badge bg-info">@item.Chef.NomComplet</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Non assigné</span>
                                }
                            </div>
                            <div class="mb-3">
                                <strong><i class="bi bi-people"></i> Nombre d'employés :</strong>
                                <span class="badge bg-success">@item.Employes.Count</span>
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.DepartementId" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i> Détails
                                </a>
                                @if (isAdminRH)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.DepartementId" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Modifier
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.DepartementId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Supprimer
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>



