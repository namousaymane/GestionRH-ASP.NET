@model GestionRH.Models.Conge

@{
    ViewData["Title"] = "Demander un congé";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📝 Nouvelle demande de congé</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Type" class="control-label fw-bold">Type de congé</label>
                            <select asp-for="Type" class="form-select">
                                <option value="CongeAnnuel">Congé Annuel</option>
                                <option value="CongeMaladie">Congé Maladie</option>
                                <option value="CongeSansSolde">Congé Sans Solde</option>
                                <option value="Autre">Autre</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateDebut" class="control-label fw-bold">Date de début</label>
                            <input asp-for="DateDebut" class="form-control" type="date" />
                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DateFin" class="control-label fw-bold">Date de fin</label>
                            <input asp-for="DateFin" class="form-control" type="date" />
                            <span asp-validation-for="DateFin" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">Envoyer la demande</button>
                            <a asp-action="Index" class="btn btn-light">Annuler</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}