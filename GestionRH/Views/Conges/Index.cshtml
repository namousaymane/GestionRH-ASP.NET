@model IEnumerable<GestionRH.Models.Conge>
@using Microsoft.AspNetCore.Identity
@using GestionRH.Models
@inject UserManager<Utilisateur> UserManager

@{
    ViewData["Title"] = "Gestion des Congés";
    var currentUser = await UserManager.GetUserAsync(User);
    var userRole = currentUser?.Role;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-calendar-event"></i> @ViewData["Title"]</h1>
        <div>
            <a asp-action="Calendrier" class="btn btn-info me-2">
                <i class="bi bi-calendar3"></i> Vue Calendrier
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Nouvelle Demande
            </a>
        </div>
    </div>

    <!-- Formulaire de recherche et filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Recherche et Filtres</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Recherche</label>
                    <input type="text" name="searchString" class="form-control" placeholder="Nom, prénom, type..." value="@ViewBag.SearchString" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Statut</label>
                    <select name="statutFilter" class="form-select">
                        <option value="">Tous</option>
                        @foreach (var statut in ViewBag.Statuts as List<string> ?? new List<string>())
                        {
                            <option value="@statut" selected="@(ViewBag.StatutFilter == statut)">@statut</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Type</label>
                    <select name="typeFilter" class="form-select">
                        <option value="">Tous</option>
                        @foreach (var type in ViewBag.Types as List<string> ?? new List<string>())
                        {
                            <option value="@type" selected="@(ViewBag.TypeFilter == type)">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Date début</label>
                    <input type="date" name="dateDebutFilter" class="form-control" value="@ViewBag.DateDebutFilter" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Date fin</label>
                    <input type="date" name="dateFinFilter" class="form-control" value="@ViewBag.DateFinFilter" />
                </div>
                <div class="col-md-1 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.SearchString as string) || 
                     !string.IsNullOrEmpty(ViewBag.StatutFilter as string) || 
                     !string.IsNullOrEmpty(ViewBag.TypeFilter as string) ||
                     !string.IsNullOrEmpty(ViewBag.DateDebutFilter as string) ||
                     !string.IsNullOrEmpty(ViewBag.DateFinFilter as string))
                {
                    <div class="col-12">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-x-circle"></i> Réinitialiser les filtres
                        </a>
                    </div>
                }
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Employé</th>
                        <th>Type</th>
                        <th>Dates</th>
                        <th>Durée</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">Aucune demande trouvée.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">
                                    @if (item.Employe != null)
                                    {
                                        @item.Employe.NomComplet
                                    }
                                    else
                                    {

                                        <span class="text-danger">Inconnu</span>
                                    }
                                </td>
                                <td><span class="badge bg-light text-dark border">@item.Type</span></td>
                                <td>
                                    @item.DateDebut.ToShortDateString() <i class="bi bi-arrow-right-short"></i> @item.DateFin.ToShortDateString()
                                </td>
                                <td>@((item.DateFin - item.DateDebut).Days + 1) j</td>
                                <td>
                                    @if (item.Statut == "EnAttente")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-clock"></i> En attente</span>
                                    }
                                    else if (item.Statut == "ValideManager")
                                    {
                                        <span class="badge bg-info text-dark"><i class="bi bi-person-check"></i> Validé Manager</span>
                                    }
                                    else if (item.Statut == "Valide")
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Validé RH</span>
                                    }
                                    else if (item.Statut == "Refuse")
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Refusé</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.IdConge" class="btn btn-sm btn-info text-white" title="Détails">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        
                                        @{
                                            var canEdit = item.Statut == "EnAttente" && (item.EmployeId == currentUser?.Id || userRole == "AdministrateurRH");
                                            var canDelete = item.Statut == "EnAttente" && (item.EmployeId == currentUser?.Id || userRole == "AdministrateurRH");
                                        }
                                        
                                        @if (canEdit)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.IdConge" class="btn btn-sm btn-warning" title="Modifier">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        }
                                        
                                        @if (canDelete)
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.IdConge" class="btn btn-sm btn-danger" title="Supprimer">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                        
                                        @if ((userRole == "AdministrateurRH" && (item.Statut == "EnAttente" || item.Statut == "ValideManager"))
                                                                        || (userRole == "Responsable" && item.Statut == "EnAttente"))
                                        {
                                            <form asp-action="Traiter" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@item.IdConge" />
                                                <button type="submit" name="decision" value="Valider" class="btn btn-sm btn-success" title="Valider">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                                <button type="submit" name="decision" value="Refuser" class="btn btn-sm btn-danger" title="Refuser">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>