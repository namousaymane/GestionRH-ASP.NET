@model GestionRH.Models.Responsable

@{
    ViewData["Title"] = "Détails du Responsable";
}

<div class="container mt-4 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header bg-primary text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-25 rounded-circle p-3 me-3">
                                <i class="bi bi-person-badge fs-2"></i>
                            </div>
                            <div>
                                <h1 class="h4 mb-0 fw-bold">@Model.NomComplet</h1>
                                <p class="mb-0 text-white-50">@Model.Role</p>
                            </div>
                        </div>
                        <span class="badge bg-white text-primary rounded-pill px-3 py-2 fs-6 shadow-sm">
                            <i class="bi bi-people-fill me-1"></i> @ViewBag.NombreEmployes Équipe
                        </span>
                    </div>
                </div>
                
                <div class="card-body p-4 p-md-5 bg-light bg-opacity-10">
                    <h5 class="text-primary border-bottom pb-2 mb-3"><i class="bi bi-info-circle-fill me-2"></i>Informations Personnelles</h5>
                    
                    <div class="row g-4 mb-4">
                        <div class="col-md-6">
                             <div class="p-3 bg-white rounded-3 shadow-sm h-100 border-start border-4 border-primary">
                                <div class="text-muted small text-uppercase fw-bold mb-1">Email</div>
                                <div class="fw-medium text-break"><a href="mailto:@Model.Email" class="text-decoration-none text-dark">@Model.Email</a></div>
                             </div>
                        </div>
                         <div class="col-md-6">
                             <div class="p-3 bg-white rounded-3 shadow-sm h-100 border-start border-4 border-info">
                                <div class="text-muted small text-uppercase fw-bold mb-1">Nom d'utilisateur</div>
                                <div class="fw-medium">@Model.UserName</div>
                             </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-5 pt-3 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-pencil-square me-2"></i>Modifier
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-trash-fill me-2"></i>Supprimer
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4 shadow-sm">
                            <i class="bi bi-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
