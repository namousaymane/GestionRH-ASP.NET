@model GestionRH.Controllers.DashboardStats
@using Microsoft.AspNetCore.Identity
@inject UserManager<GestionRH.Models.Utilisateur> UserManager

@{
    ViewData["Title"] = "Tableau de bord";
    var user = await UserManager.GetUserAsync(User);
    var userRole = user?.Role;
}

@if (user == null)
{
    <div class="text-center mt-5">
        <h1 class="display-4">Bienvenue sur GestionRH</h1>
        <p class="lead">Système de gestion des ressources humaines</p>
        <div class="mt-4">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg me-2">Se connecter</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-primary btn-lg">S'inscrire</a>
        </div>
    </div>
}
else
{
    <div class="container-fluid mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="display-5">Tableau de bord</h1>
            <span class="badge bg-primary fs-6">@userRole</span>
        </div>

        <div class="row g-4">
            @if (userRole == "AdministrateurRH")
            {
                <!-- Statistiques pour Administrateur RH -->
                <div class="col-md-3">
                    <div class="card shadow-sm border-primary">
                        <div class="card-body text-center">
                            <i class="bi bi-people-fill display-4 text-primary mb-2"></i>
                            <h3 class="card-title">@Model.TotalEmployes</h3>
                            <p class="card-text text-muted">Employés</p>
                            <a asp-controller="Employes" asp-action="Index" class="btn btn-sm btn-outline-primary">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm border-info">
                        <div class="card-body text-center">
                            <i class="bi bi-person-badge-fill display-4 text-info mb-2"></i>
                            <h3 class="card-title">@Model.TotalResponsables</h3>
                            <p class="card-text text-muted">Responsables</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm border-warning">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check-fill display-4 text-warning mb-2"></i>
                            <h3 class="card-title">@Model.TotalConges</h3>
                            <p class="card-text text-muted">Total Congés</p>
                            <a asp-controller="Conges" asp-action="Index" class="btn btn-sm btn-outline-warning">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card shadow-sm border-success">
                        <div class="card-body text-center">
                            <i class="bi bi-cash-stack display-4 text-success mb-2"></i>
                            <h3 class="card-title">@Model.TotalPaies</h3>
                            <p class="card-text text-muted">Paies</p>
                            <a asp-controller="Paies" asp-action="Index" class="btn btn-sm btn-outline-success">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mt-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Congés en attente</h5>
                        </div>
                        <div class="card-body text-center">
                            <h2 class="display-3">@Model.CongesEnAttente</h2>
                            <p class="text-muted">Demandes nécessitant une validation</p>
                            <a asp-controller="Conges" asp-action="Index" class="btn btn-warning">Traiter</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mt-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-check-circle-fill"></i> Congés validés</h5>
                        </div>
                        <div class="card-body text-center">
                            <h2 class="display-3">@Model.CongesValides</h2>
                            <p class="text-muted">Demandes approuvées</p>
                        </div>
                    </div>
                </div>

                <!-- Graphique en cercle pour Administrateur RH -->
                <div class="col-md-12 mt-4">
                    <div class="row justify-content-center">
                        <div class="col-md-5">
                            <div class="card shadow-sm border-0">
                                <div class="card-body text-center">
                                    <canvas id="congesParStatutChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else if (userRole == "Responsable")
            {
                <!-- Statistiques pour Responsable -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-primary">
                        <div class="card-body text-center">
                            <i class="bi bi-people-fill display-4 text-primary mb-2"></i>
                            <h3 class="card-title">@Model.TotalEmployes</h3>
                            <p class="card-text text-muted">Employés dans mon équipe</p>
                            <a asp-controller="Employes" asp-action="Index" class="btn btn-sm btn-outline-primary">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-warning">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check-fill display-4 text-warning mb-2"></i>
                            <h3 class="card-title">@Model.TotalConges</h3>
                            <p class="card-text text-muted">Congés de l'équipe</p>
                            <a asp-controller="Conges" asp-action="Index" class="btn btn-sm btn-outline-warning">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-danger">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history display-4 text-danger mb-2"></i>
                            <h3 class="card-title">@Model.CongesEnAttente</h3>
                            <p class="card-text text-muted">En attente de validation</p>
                            <a asp-controller="Conges" asp-action="Index" class="btn btn-sm btn-outline-danger">Traiter</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Statistiques pour Employé -->
                <div class="col-md-4">
                    <div class="card shadow-sm border-primary">
                        <div class="card-body text-center">
                            <i class="bi bi-calendar-check-fill display-4 text-primary mb-2"></i>
                            <h3 class="card-title">@Model.TotalConges</h3>
                            <p class="card-text text-muted">Mes congés</p>
                            <a asp-controller="Conges" asp-action="Index" class="btn btn-sm btn-outline-primary">Voir</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-warning">
                        <div class="card-body text-center">
                            <i class="bi bi-clock-history display-4 text-warning mb-2"></i>
                            <h3 class="card-title">@Model.CongesEnAttente</h3>
                            <p class="card-text text-muted">En attente</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card shadow-sm border-success">
                        <div class="card-body text-center">
                            <i class="bi bi-wallet2 display-4 text-success mb-2"></i>
                            <h3 class="card-title">@Model.TotalPaies</h3>
                            <p class="card-text text-muted">Mes paies</p>
                            <a asp-controller="Paies" asp-action="Index" class="btn btn-sm btn-outline-success">Voir</a>
                        </div>
                    </div>
                </div>

                <!-- Graphique en cercle pour Responsable -->
                <div class="col-md-12 mt-4">
                    <div class="row justify-content-center">
                        <div class="col-md-5">
                            <div class="card shadow-sm border-0">
                                <div class="card-body text-center">
                                    <canvas id="congesParStatutChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            loadChartData();
        });

        async function loadChartData() {
            try {
                const response = await fetch('@Url.Action("GetChartData", "Home")');
                const data = await response.json();

                // Graphique : Congés par mois
                if (data.congesParMois && data.congesParMois.length > 0) {
                    const ctx1 = document.getElementById('congesParMoisChart');
                    if (ctx1) {
                        new Chart(ctx1, {
                            type: 'line',
                            data: {
                                labels: data.congesParMois.map(item => item.mois),
                                datasets: [{
                                    label: 'Nombre de congés',
                                    data: data.congesParMois.map(item => item.count),
                                    borderColor: 'rgb(75, 192, 192)',
                                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                    tension: 0.1
                                }]
                            },
                            options: {
                                responsive: true,
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Évolution des congés (6 derniers mois)'
                                    }
                                }
                            }
                        });
                    }
                }

                // Graphique : Congés par statut (camembert - mis en évidence)
                if (data.congesParStatut && data.congesParStatut.length > 0) {
                    const ctx2 = document.getElementById('congesParStatutChart');
                    if (ctx2) {
                        new Chart(ctx2, {
                            type: 'doughnut',
                            data: {
                                labels: data.congesParStatut.map(item => item.statut),
                                datasets: [{
                                    data: data.congesParStatut.map(item => item.count),
                                    backgroundColor: [
                                        'rgba(255, 206, 86, 0.9)',
                                        'rgba(75, 192, 192, 0.9)',
                                        'rgba(255, 99, 132, 0.9)'
                                    ],
                                    borderWidth: 2,
                                    borderColor: '#fff'
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: true,
                                plugins: {
                                    legend: {
                                        position: 'bottom',
                                        labels: {
                                            padding: 15,
                                            font: {
                                                size: 12
                                            }
                                        }
                                    },
                                    tooltip: {
                                        enabled: true
                                    }
                                }
                            }
                        });
                    }
                }

                // Graphique : Congés par département (Admin seulement)
                if (data.congesParDepartement && data.congesParDepartement.length > 0) {
                    const ctx3 = document.getElementById('congesParDepartementChart');
                    if (ctx3) {
                        new Chart(ctx3, {
                            type: 'bar',
                            data: {
                                labels: data.congesParDepartement.map(item => item.departement),
                                datasets: [{
                                    label: 'Nombre de congés',
                                    data: data.congesParDepartement.map(item => item.count),
                                    backgroundColor: 'rgba(54, 162, 235, 0.8)'
                                }]
                            },
                            options: {
                                responsive: true,
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Congés par département'
                                    }
                                }
                            }
                        });
                    }
                }

                // Graphique : Paies par mois
                if (data.paiesParMois && data.paiesParMois.length > 0) {
                    const ctx4 = document.getElementById('paiesParMoisChart');
                    if (ctx4) {
                        new Chart(ctx4, {
                            type: 'bar',
                            data: {
                                labels: data.paiesParMois.map(item => item.mois),
                                datasets: [{
                                    label: 'Nombre de paies',
                                    data: data.paiesParMois.map(item => item.count),
                                    backgroundColor: 'rgba(75, 192, 192, 0.8)'
                                }]
                            },
                            options: {
                                responsive: true,
                                plugins: {
                                    title: {
                                        display: true,
                                        text: 'Paies par mois (6 derniers mois)'
                                    }
                                }
                            }
                        });
                    }
                }
            } catch (error) {
                console.error('Erreur lors du chargement des graphiques:', error);
            }
        }
    </script>
}
