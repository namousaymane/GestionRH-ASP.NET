@model IEnumerable<GestionRH.Models.Contrat>

@{
    ViewData["Title"] = "Gestion des Contrats";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1><i class="bi bi-file-earmark-text"></i> Gestion des Contrats</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nouveau Contrat
        </a>
    </div>

    <!-- Formulaire de recherche et filtres -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Rechercher (nom, prénom)</label>
                    <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Nom ou prénom de l'employé..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Type de contrat</label>
                    <select name="typeFilter" class="form-select">
                        <option value="">-- Tous les types --</option>
                        @foreach (var type in ViewBag.Types as string[])
                        {
                            <option value="@type" selected="@(ViewBag.TypeFilter == type)">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-5 d-flex align-items-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des contrats -->
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i> Aucun contrat trouvé. Créez votre premier contrat.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Employé</th>
                        <th>Type</th>
                        <th>Date de début</th>
                        <th>Date de fin</th>
                        <th>Salaire brut</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Employe?.NomComplet</strong><br />
                                <small class="text-muted">@item.Employe?.Poste</small>
                            </td>
                            <td>
                                <span class="badge bg-info">@item.TypeContrat</span>
                            </td>
                            <td>@item.DateDebut.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.DateFin.HasValue)
                                {
                                    @item.DateFin.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Indéterminé</span>
                                }
                            </td>
                            <td>@item.SalaireBrut.ToString("C")</td>
                            <td>
                                @if (item.EstActif)
                                {
                                    <span class="badge bg-success">Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactif</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex justify-content-start">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn-icon btn-icon-info me-2" title="Détails">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon btn-icon-warning me-2" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon btn-icon-danger" title="Supprimer">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>


